{
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "framework": "other",
  "env": {
    "NODE_ENV": "production"
  },
  "public": "dist/spa",
  "functions": {
    "server/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server/node-build.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "dist/spa/index.html"
    }
  ]
}
